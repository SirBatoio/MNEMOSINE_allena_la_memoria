<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sequenze">

    <ImageView
        android:id="@+id/scelta_6"
        android:layout_width="225dp"
        android:layout_height="175dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toTopOf="@+id/scelta_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scelta_3"
        app:layout_constraintTop_toBottomOf="@+id/titolo"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/scelta_7"
        android:layout_width="225dp"
        android:layout_height="175dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toTopOf="@+id/scelta_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scelta_3"
        app:layout_constraintTop_toBottomOf="@+id/scelta_6"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/scelta_8"
        android:layout_width="225dp"
        android:layout_height="175dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scelta_5"
        app:layout_constraintTop_toBottomOf="@+id/scelta_7"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/scelta_"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toTopOf="@+id/Scelta_3"
        app:layout_constraintEnd_toStartOf="@+id/scelta_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/titolo"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/scelta_3"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toTopOf="@+id/scelta_5"
        app:layout_constraintEnd_toStartOf="@+id/scelta_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scelta_"
        app:layout_constraintTop_toBottomOf="@+id/titolo"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/scelta_5"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scelta_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/scelta_3"
        app:layout_constraintTop_toBottomOf="@+id/scelta_3"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@drawable/melagrana" />

    <ImageView
        android:id="@+id/Scelta_3"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:onClick="Controllo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scelta_"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/scelta_"
        app:layout_constraintTop_toBottomOf="@+id/scelta_"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button3"
        android:layout_width="225dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:onClick="cambiaVolume"
        android:text="volume ON"
        android:textSize="25sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titolo"
        style="@style/Testo"
        android:layout_width="782dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:text="COMPLETA LA SEQUENZA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:onClick="home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:onClick="indietro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/indietro" />

</androidx.constraintlayout.widget.ConstraintLayout>